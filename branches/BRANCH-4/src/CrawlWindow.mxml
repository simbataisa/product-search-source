<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" creationComplete="init();">
	<mx:Script source="controller/CrawlWindowAs.as"/>
	<mx:Form width="100%" height="80%">
		<mx:FormItem label="Select Category">
				<mx:ComboBox id="selectCat" labelField="@label" />
				</mx:FormItem>
				<mx:FormItem label="Select Merchant">	
					<mx:ComboBox id="selectMerchant" />
				</mx:FormItem>
				<mx:FormItem label="Number of Products to Crawl">
					<mx:TextInput id="setMax" />
				</mx:FormItem>
				<mx:FormItem>
					<mx:HBox>
					<mx:Button label="start" id="start" />
					<mx:Button label="stop" id="stop" enabled="false"/>
					<mx:Button label="clear" id="clear" enabled="false"/>
					</mx:HBox>
				</mx:FormItem>
				</mx:Form>
				
				
				<mx:HBox horizontalAlign="center" width="100%" height="100%">
				<mx:TextArea id="output" editable="false" width="80%" height="80%" verticalScrollPolicy="auto" borderThickness="1" />
				</mx:HBox>
</mx:VBox>
